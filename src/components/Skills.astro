---
interface SkillCard {
  icon: string;
  title: string;
  subtitle: string;
  description: string;
  highlightColor: string;
}

interface Props {
  skillCards: SkillCard[];
}

const { skillCards } = Astro.props;
---

<section id="skills" class="py-16 px-4 sm:px-6 lg:px-8  bg-black/30 ">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">Skills</h2>
      <div class="w-24 h-1 bg-gradient-to-r from-blue-400 to-purple-400 mx-auto"></div>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {skillCards.map((card:SkillCard, index:number) => (
        <div class=" p-8 rounded-xl shadow-lg border border-gray-700 shadow-purple-500/20 hover:border-gray-600 transition-all duration-300 hover:shadow-xl hover:shadow-purple-500/30 ">
          
          <!-- Title with highlight -->
          <div class="text-center mb-4">
            <h3 class="text-xl font-bold text-white mb-2">
                <>{card.title.split(" ")[0] } <span class={`${index%2 === 0 ? "text-blue-400" : "text-purple-400"}`}>{" "}{card.title.split(" ")[1]}</span></>
            </h3>
            <p class="text-gray-300 text-sm">{card.subtitle}</p>
          </div>
          
          <!-- Description -->
          <p class="text-gray-400 text-center leading-relaxed">
            {card.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section> 