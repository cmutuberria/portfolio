---
import { Image } from 'astro:assets';
import myImage from '/public/profile1.jpeg';
interface Props {
  name: string;
  title: string;
  description: string;
}

const { name, title, description } = Astro.props;
---

<section class="pt-24 pb-16 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <div class="text-center">
      <div class="mb-8">
        <div class="w-64 h-64  mx-auto mb-6 rounded-full flex items-center justify-center">
          <!-- <span class="text-4xl font-bold text-white">{name.charAt(0)}</span> -->
          <Image src={myImage} alt="Profile" class="w-full h-full rounded-full object-cover object-top-right" />
        </div>
        <h1 class="text-4xl sm:text-6xl font-bold text-white mb-4">
          Hi, I'm <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">{name}</span>
        </h1>
        <p class="text-xl sm:text-2xl text-gray-300 mb-8 max-w-3xl mx-auto">
          {title}
        </p>
        <p class="text-lg text-gray-400 mb-12 max-w-2xl mx-auto">
          {description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#contact" class="bg-gradient-to-r from-blue-500 to-purple-500 text-white px-8 py-3 rounded-lg font-medium hover:shadow-lg hover:shadow-blue-500/25 transition-all duration-300">
            Contact Me
          </a>
          <a href="#projects" class="border border-gray-500 text-gray-300 px-8 py-3 rounded-lg font-medium  hover:text-white hover:shadow-lg hover:shadow-blue-500/25">
            View Projects
          </a>
        </div>
      </div>
    </div>
  </div>
</section> 